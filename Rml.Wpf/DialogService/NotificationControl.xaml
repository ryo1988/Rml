<UserControl
    x:Class="Rml.Wpf.DialogService.NotificationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Rml.Wpf.DialogService"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="http://prismlibrary.com/"
    MaxWidth="500"
    MaxHeight="500"
    d:DataContext="{d:DesignInstance local:NotificationControlViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid FocusManager.FocusedElement="{Binding ElementName=OkButton}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Grid.Row="0"
            Margin="25"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <ContentPresenter Content="{Binding Content}" />
        </ScrollViewer>
        <Button
            x:Name="OkButton"
            Grid.Row="1"
            Margin="25,0,25,25"
            Command="{Binding OkCommand}"
            Content="OK" />
    </Grid>
</UserControl>
