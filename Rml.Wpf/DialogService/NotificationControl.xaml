<UserControl
    x:Class="Rml.Wpf.DialogService.NotificationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Rml.Wpf.DialogService"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="http://prismlibrary.com/"
    d:DataContext="{d:DesignInstance local:NotificationControlViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=OkButton}" Orientation="Vertical">
        <ContentPresenter Margin="25" Content="{Binding Content}" />
        <Button
            x:Name="OkButton"
            Margin="25,0,25,25"
            Command="{Binding OkCommand}"
            Content="OK" />
    </StackPanel>
</UserControl>
